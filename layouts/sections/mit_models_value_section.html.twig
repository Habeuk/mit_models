{% if content %}
    {% if content.value_section_bgimage.layout_builder_add_block %}
        {{ content.value_section_bgimage }}
    {% endif %}
    {% if content.value_section_bgimage|layout_bg_img %}
        {% set attributes = attributes.merge(content.value_section_bgimage|layout_bg_img) %}
	{% endif %}
<section {{ attributes.addClass(['mitor-core-value-section-handler','mitor-section-title--overflowable'])}}>
    <div class="container">
        <div class="section-header">
            {% if content.value_section_title %}
            <h3 {{ region_attributes.value_section_title.addClass(['section-title','h3'])}}>
                {{ content.value_section_title }}
            </h3>
            {% endif %}
            {% if content.value_section_description %}
            <div {{ region_attributes.value_section_description.addClass('section-desc')}}>
                {{ content.value_section_description }}
            </div>
            {% endif %}
        </div>
        <div class="value-list">
            <div class="row">
                {% if content.value_section_teaser %}
                    {% for item in content.value_section_teaser|array_elements(region_attributes.value_section_teaser.addClass('')) %}
                        {{ item }}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endif %}