{% if content %}
    {% if content.value_section_bgimage.layout_builder_add_block %}
        {{ content.value_section_bgimage }}
    {% endif %}
    {% if content.value_section_bgimage|layout_bg_img %}
        {% set attributes = attributes.merge(content.value_section_bgimage|layout_bg_img) %}
	{% endif %}
<section {{ attributes.addClass(['mitor-core-value-section-handler'])}}>
    <div {% if settings.config_section %} class="{{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
        <div class="section-header">
            {% if content.value_section_title %}
            <h1 {{ region_attributes.value_section_title.addClass(['section-title'])}}>
                {{ content.value_section_title }}
            </h1>
            {% endif %}
            {% if content.value_section_description %}
            <{{ settings.region_tag_value_section_description }} {{ region_attributes.value_section_description.addClass(['section-desc'])}}>
                {{ content.value_section_description }}
            </{{ settings.region_tag_value_section_description }}>
            {% endif %}
        </div>
        <div class="value-list">
            <div class="row {{settings.class_row}}">
                {% if content.value_section_teaser %}
                    {% for item in content.value_section_teaser|array_elements(region_attributes.value_section_teaser.addClass('')) %}
                        {{ item }}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endif %}