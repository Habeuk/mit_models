{% if content %}
<div {{ attributes.addClass('mitor-hero-2')}} >
    {% if content.hero_variant_image %}
    <div {{ region_attributes.hero_variant_image.addClass('')}}>
        {{ content.hero_variant_image }}
    </div>
    {% endif %}
    <div class="mitor-hero-content">
        <div class="container">
            <div class="row">
                <div class="mitor-card__body col-lg-10 ">
                    {% if content.hero_variant_title %}
                    <{{settings.region_tag_hero_variant_title}} {{ region_attributes.hero_variant_title.addClass('mc-title')}}>
                        {{ content.hero_variant_title }}
                    </{{settings.region_tag_hero_variant_title}}>
                    {% endif %}
                    {% if content.hero_variant_desc %}
                    <div {{ region_attributes.hero_variant_desc.addClass('mc-description')}}>
                        {{ content.hero_variant_desc }}
                    </div>
                    {% endif %}
                    {% if content.hero_variant_btn %}
                        {{ content.hero_variant_btn }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
