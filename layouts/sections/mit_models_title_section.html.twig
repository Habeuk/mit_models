{% if content %}
<section {{ attributes.addClass('mitor-section-title') }}>
    <div class="container">
        <div class="section-header">
            {% if content.title %}
            <h2 {{ region_attributes.title.addClass('section-title') }}>
                {{ content.title }}
            </h2>
            {% endif %}
            {% if content.description %}
            <div {{ region_attributes.description.addClass('section-desc') }}>
                {{ content.description }}
            </div>
            {% endif %}
        </div>
        {# toggle buttons #}
        <div class="bundle-selection">
            <ul class="nav nav-pills" role="tablist" id="btnTab">
                <li class="nav-item">
                    {% if content.type_one %}
                    <a href="#month" class="nav-link  active" id="month-tab" data-toggle="tab" type="button"
                       role="tab"
                       aria-controls="home" aria-selected="false">
                       {{ content.type_one }} 
                       monthly
                    </a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if content.type_two %}
                    <a href="#years" class="nav-link" id="years-tab" data-toggle="tab" d type="button"
                       role="tab"
                       aria-controls="home" aria-selected="true">
                       {{ content.type_two }}
                       yearly
                    </a>
                    {% endif %}
                </li>
            </ul>
        </div>
        {# content container #}
        {#% if content.teaser_container %}
    	    {% for item in content.teaser_container|array_elements(region_attributes.teaser_container.addClass('')) %}
    	        {{ item }} 
    	    {% endfor %}
	    {% endif %#}
        {# elements container #}
        <div class="tab-content" id="btnTabContent">
            <div class="tab-pane fade show " id="years" role="tabpanel" aria-labelledby="years-tab">
                <div {#class="pricing-card-handler"#}>
                    {% if content.teaser_container %}
                        {% for item in content.teaser_container|array_elements(region_attributes.teaser_container.addClass('')) %}
                            {{ item }} 
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div> 
        <div class="d-flex justify-content-center">
        {% if content.title_section_btn %}
            {{ content.title_section_btn }}
        {% endif %}
        </div>
    <div>
</section>
{% endif %}