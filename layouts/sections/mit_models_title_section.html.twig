{% if content %}
<section {{ attributes.addClass('mitor-section-title') }}>
    <div class="container">
        <div class="section-header">
            {% if content.title %}
            <h3 {{ region_attributes.title.addClass('section-title') }}>
                {{ content.title }}
            </h3>
            {% endif %}
            {% if content.description %}
            <p {{ region_attributes.description.addClass('section-desc') }}>
                {{ content.description }}
            </p>
            {% endif %}
        </div>
    <div>
    <div class="row">
        <div class="col"></div>
    </div> 
    <div class="d-flex justify-content-center">
    {% if content.title_section_btn %}
        {{ content.title_section_btn }}
    {% endif %}
    </div>
</section>
{% endif %}