{% if content %}
{#<header {{ attributes.addClass('mitor-hero')}}>
    <div class="container">#}
        <div class="mitor-card mitor-card--right mitor-card--reverse row" >
            <div class="mitor-card__img col-lg-6">
                {% if content.teaser_image %}
                    <div {{ region_attributes.teaser_image.addClass('img-bloc')}} >
                        {{ content.teaser_image }}
                    </div>
                {% endif %}
            </div>
            <div class="mitor-card__body col-lg-6  ">
                {% if content.teaser_title %}
                    <{{settings.region_tag_teaser_title}} {{ region_attributes.teaser_title.addClass('mc-title')}} >
                        {{ content.teaser_title|layout_value }}
                    </{{settings.region_tag_teaser_title}}>
                {% endif %}
                {% if content.teaser_description %}
                    <div {{ region_attributes.teaser_description.addClass('mc-description')}} >
                        {{ content.teaser_description }}
                    </div>
                {% endif %}
                {% if content.teaser_link %}
                    {% for item in content.teaser_link|array_elements(region_attributes.teaser_link.addClass('')) %}
                        {{ item }}
                    {% endfor %}
                {% endif %}
                {#% if content.teaser_link %}
                    {{ content.teaser_link }}
                {% endif %#}
            </div>
        </div>
    {#</div>#}
    {% if content.teaser_svg %}
    <div {{ region_attributes.teaser_svg.addClass('svg-1')}} >
        {{ content.teaser_svg }}
    </div>    
    {% endif %}
{#</header>#}
{% endif %}