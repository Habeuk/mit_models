{% if content %}
<div {{ attributes.addClass('simple-card')}} >
    <div class="simple-card__img">
        <div class="blog-date">
            {% if content.card_date %}
            <span {{ region_attributes.card_date.addClass('date')}}>
                {{ content.card_date }}
            </span>
            {% endif %}
            {% if content.card_month %}
            <span {{ region_attributes.card_month.addClass('month')}}>
                {{ content.card_month }}
            </span>
            {% endif %}
        </div>
        {% if content.card_image %}
        <div {{ region_attributes.card_image.addClass('')}}>
            {{ content.card_image}}
        </div>
        {% endif %}
    </div>
    <div class="simple-card__body">
        <div class="sc-user-info">
            {% if content.card_user_image %}
            <div {{ region_attributes.card_user_image.addClass('img-bloc')}} >
                {{ content.card_user_image }}
            </div>
            {% endif %}
            <div class="user-info">
                {% if content.card_user_title %}
                <h5 {{ region_attributes.card_user_title.addClass('user-title')}}>
                    {{ content.card_user_title}}
                </h5>
                {% endif %}
                <div class="user-desc d-flex">
                    {% if content.card_user_role %}
                    <span {{ region_attributes.card_user_role.addClass('user-role pr-2')}} >
                        {{ content.card_user_role }}
                    </span>
                    {% endif %} | 
                    {% if content.card_user_date %}
                    <span {{ region_attributes.card_user_date.addClass('user-date pl-2')}} > 
                        {{ content.card_user_date }}
                    </span>
                    {% endif %}
                </div>
            </div>
        </div>
        {% if content.card_icon %}
        <div {{ region_attributes.card_icon.addClass('sc-icon')}} >
            {{ content.card_icon }}
        </div>
        {% endif %}
        {% if content.card_title %}
        <h5 {{ region_attributes.card_title.addClass('sc-title')}} >
            {{ content.card_title}}
        </h5>
        {% endif %}
        <div class="sc-title--bottom-line"></div>
        {% if content.card_description %}
            <div {{ region_attributes.card_description.addClass('sc-desc')}} >
                {% if settings.limit_text_desc > 0 and content.card_description.layout_builder_add_block is empty %}
					{% set d = content.card_description|render|striptags|trim %}
					{{ d|length > settings.limit_text_desc ? d|slice(0,settings.limit_text_desc) ~ '...' : d}}
				{% else %}
					{{content.card_description}}
				{% endif %}
            </div>
        {% endif %}        
        {% if content.card_link %}
            <div {{region_attributes.card_link}}>
            	{{ content.card_link }}
            </div>            
        {% endif %}
    </div>
</div>
{% endif %}